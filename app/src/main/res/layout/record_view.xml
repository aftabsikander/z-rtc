<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zeroheight="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/artboard_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top|center_horizontal"
    android:orientation="vertical"
    android:background="#FF5252"
    tools:ignore="missingPrefix"
    tools:context=".MainActivity" >


    <LinearLayout android:id="@+id/ll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/test_recording"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:textSize="38sp"
            android:text="@string/zh_start_recording"
            android:gravity="center"
            android:layout_below="@+id/img_play_2"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="106dp"
            android:id="@+id/text_counter"
            android:textColor="#ffffff"
            android:layout_marginTop="432dp"
            android:layout_height="wrap_content"
            android:textSize="38sp"
            android:text="@string/zh__00_00"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"/>


        <View android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/white_circle"
                android:layout_marginTop="39dp"
                android:layout_centerVertical="false"
                android:layout_centerHorizontal="true"
                android:color="#0000"
                android:id="@+id/record_button"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false"
                android:layout_alignParentBottom="false"
                android:layout_gravity="center_horizontal" />

        <net.zedge.ringtonecreator.VisualizerView
        android:id="@+id/visualizer"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp" />
     </LinearLayout>


</RelativeLayout>
